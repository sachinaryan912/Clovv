<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ShopProductsActivity">

    <ImageView
        android:id="@+id/shopImageData"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_masala"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/black_grad2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/black_grad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lot_fav2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="14dp"
                    app:lottie_rawRes="@raw/fav_btn" />


<!--                <ImageView-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:layout_marginRight="15dp"-->
<!--                    android:src="@drawable/ic_baseline_favorite_border_24"-->
<!--                    android:tint="@color/white" />-->

                <ImageView
                    android:id="@+id/searchBtnShopIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_search_24"
                    android:tint="@color/white" />


            </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/shop_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Shop name"
                android:textColor="@color/purple_700"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_locality_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Shop locality"
                android:textColor="#fff"
                android:textSize="17dp" />

            <!--        <TextView-->
            <!--            android:id="@+id/shop_id"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Shop locality"-->
            <!--            android:textSize="17dp"-->
            <!--            android:fontFamily="@font/nunito_sans"-->
            <!--            android:textColor="#c4c4c4"/>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_star_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#c4c4c4"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/shopDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 KM"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Status"
                    android:textColor="#c4c4c4"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/shopStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="closed"
                    android:textColor="#ff0000"
                    android:fontFamily="@font/nunito_sans"
                    android:textStyle="bold"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/btm_design_bg"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products available in shop"
                android:textColor="#000"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/searchProductShop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_edt_card"
                android:hint="Search product..."
                android:paddingLeft="25dp"
                android:textSize="15dp"
                android:fontFamily="@font/nunito_sans"
                android:singleLine="true"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_list_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_bg"
        android:layout_margin="30dp"
        android:elevation="10dp"
        android:id="@+id/productSnackBar"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:outlineSpotShadowColor="@color/purple_200"
        android:backgroundTint="@color/purple_200"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/itemDataSnack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito_sans"
                android:text="2 items in your cart"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/viewBtnSnack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito_sans"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>