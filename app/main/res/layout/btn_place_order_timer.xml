<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="30dp"
    android:background="@drawable/btm_design_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay65"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/time_dialog_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#00C853"/>


        <ProgressBar
            android:layout_marginTop="14dp"
            android:id="@+id/progressBar_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:text="Please wait shopkeeper to accept your order..."
            android:textColor="#c4c4c4"
            android:textSize="14dp" />



        <Button
            android:id="@+id/cancelPlacingBtn"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/can_btn"
            android:fontFamily="@font/nunito_sans"
            android:text="Cancel Order"
            android:outlineSpotShadowColor="@color/red"
            android:textColor="@color/white" />


    </LinearLayout>



</RelativeLayout>